    <div class="container">
      <h2>Resume Maker</h2>
      <h3>fill all the details and ai will make your resume</h3>
      <input type="text" id="name" placeholder="Full name">
      <input type="text" id="number" placeholder="Phone number">
      <input type="text" id="email" placeholder="Emial adress">
      <input type="text" id="linkedin" placeholder="Linkedin profile link">
      <input type="text" id="city" placeholder="location(city,state)">
      <textarea id="work-exp" placeholder="work experience"></textarea>
      <textarea id="education" placeholder="Education"></textarea>
      <textarea id="project" placeholder="projects"></textarea>
      

      <button onclick="makeResume()">Submit</button>
      <div id="results"></div>
    </div>
  
    <script>
      async function makeResume() {
        const name = document.getElementById('name').value;
        const number = document.getElementById('number').value;
        const email = document.getElementById('email').value;
        const linkedin = document.getElementById('linkedin').value;
        const location = document.getElementById('city').value;
        const workExp = document.getElementById('work-exp').value;
        const education = document.getElementById('education').value;
        const project = document.getElementById('project').value;

  
        document.getElementById('results').innerText = 'Searching...';
  
        try {
          const res = await fetch('/jobs', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ name,number,email,linkedin,location,workExp,education,project })
          });
  
          const data = await res.json();
          document.getElementById('results').innerText = data.reply;
        } catch (err) {
          document.getElementById('results').innerText = 'Error fetching job listings.';
        }
      }
    </script>
    


  </body>
